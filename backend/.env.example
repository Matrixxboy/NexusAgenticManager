# ─── LLM Config ───────────────────────────────────────────────
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
OPENROUTER_API_KEY=sk-or-v1-your-token
CLAUDE_MODEL=anthropic/claude-3.5-sonnet
MODEL_REASONING=anthropic/claude-opus-4.6
MODEL_CODING=minimax/minimax-01
MODEL_LONG_CONTEXT=google/gemini-2.5-pro
MODEL_CREATIVE=x-ai/grok-3-mini
MODEL_BUDGET=deepseek/deepseek-v3.1-terminus

# ─── LLM Router Thresholds ────────────────────────────────────
# Use local if prompt tokens < this limit
LOCAL_TOKEN_THRESHOLD=2000
# Use cloud for tasks tagged: research_heavy, career_analysis
CLOUD_TASK_TYPES=research_heavy,career_analysis,code_review_deep

# ─── Database ─────────────────────────────────────────────────
DATABASE_URL=sqlite+aiosqlite:///./nexus.db
CHROMA_DB_PATH=./chroma_db
REDIS_URL=redis://localhost:6379

# ─── Integrations ─────────────────────────────────────────────
GITHUB_TOKEN=ghp_your_token
GITHUB_USERNAME=your_username
NOTION_API_KEY=secret_your_notion_key
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# ─── Scheduler (24hr format) ──────────────────────────────────
MORNING_BRIEFING_TIME=09:00
EVENING_SUMMARY_TIME=18:30

# ─── App ──────────────────────────────────────────────────────
APP_NAME=NEXUS
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=change-this-to-a-random-secret

# ─── Notion DB IDs (get from Notion page URL) ─────────────────
NOTION_DAILY_LOG_DB=your-database-id-here
NOTION_RESEARCH_DB=your-research-database-id-here
